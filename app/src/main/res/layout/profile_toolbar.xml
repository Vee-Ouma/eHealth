<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rltoolbar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:minHeight="@dimen/toolbar_height">

    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:src="@drawable/actionbar_btn_back_pressed"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/profileSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_setting"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:textSize="@dimen/login_page_text"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/profileSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_skip"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:textSize="@dimen/skip"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="invisible"
        android:textColor="@color/colorPrimaryDark"/>



</RelativeLayout>